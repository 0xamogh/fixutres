<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="4dp"
    app:cardElevation="10dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="388dp"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/team1i"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginLeft="41dp"
            android:layout_marginRight="35dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageView
            android:id="@+id/team2i"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/team1name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="19dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/team1i"
            app:layout_constraintTop_toBottomOf="@+id/team1i" />

        <TextView
            android:id="@+id/team2name"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="21dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/team2i"
            app:layout_constraintTop_toBottomOf="@+id/team2i" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="33dp"
            android:text="V/S"
            android:textSize="40dp"
            app:layout_constraintEnd_toStartOf="@+id/team2i"
            app:layout_constraintStart_toEndOf="@+id/team1i"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="116dp"
            android:layout_marginStart="116dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="57dp"
            android:layout_marginLeft="57dp"
            android:layout_marginRight="57dp"
            android:layout_marginStart="57dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/team2name"
            app:layout_constraintStart_toStartOf="@+id/time" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="19dp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>